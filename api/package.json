  "type": "module",
  "bugs": {
    "url": "https://github.com/Desperado/test_task_qd/issues"
  },
  "homepage": "https://github.com/Desperado/test_task_qd#readme",
  "dependencies": {
    "axios": "^0.26.0",
    "chai": "^4.3.6",
    "chai-json-schema": "^1.5.1",
    "dotenv": "^16.0.0",
    "mocha": "^9.2.1",
    "mochawesome": "^7.0.1",
    "mochawesome-merge": "^4.2.1",
    "mochawesome-report-generator": "^6.0.1",
    "prettier": "^2.5.1",
    "qs": "^6.10.3"
  }
}
